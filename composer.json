{
    "name": "sylius/resource-bundle",
    "type": "symfony-bundle",
    "description": "Resource component for Sylius.",
    "keywords": [
        "resource",
        "storage",
        "persistence",
        "sylius"
    ],
    "homepage": "https://sylius.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "https://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "https://sylius.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^7.3",
        "babdev/pagerfanta-bundle": "^2.5",
        "doctrine/doctrine-bundle": "^1.12 || ^2.0",
        "doctrine/persistence": "^1.3",
        "stof/doctrine-extensions-bundle": "^1.2",
        "sylius/registry": "^1.2",
        "symfony/config": "^4.4 || ^5.1",
        "symfony/expression-language": "^4.4 || ^5.1",
        "symfony/form": "^4.4 || ^5.1",
        "symfony/framework-bundle": "^4.4 || ^5.1",
        "symfony/security-csrf": "^4.4 || ^5.1",
        "symfony/translation": "^4.4 || ^5.1",
        "symfony/twig-bundle": "^4.4 || ^5.1",
        "symfony/validator": "^4.4 || ^5.1",
        "symfony/yaml": "^4.4 || ^5.1",
        "webmozart/assert": "^1.8"
    },
    "replace": {
        "sylius/resource": "self.version"
    },
    "conflict": {
        "friendsofsymfony/rest-bundle": "<3.0 >=4.0",
        "jms/serializer-bundle": "<3.5 >=4.0",
        "willdurand/hateoas-bundle": "<2.0 >=3.0",
        "winzou/state-machine-bundle": "<0.3.2 || >=0.4.0 <0.4.3"
    },
    "require-dev": {
        "doctrine/orm": "^2.5",
        "friendsofsymfony/rest-bundle": "^3.0",
        "gedmo/doctrine-extensions": "^2.4",
        "jms/serializer-bundle": "^3.5",
        "lchrusciel/api-test-case": "^5.0",
        "matthiasnoback/symfony-dependency-injection-test": "^4.0",
        "pamil/phpspec-skip-example-extension": "^4.1",
        "phpspec/phpspec": "^6.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "0.12.49",
        "phpstan/phpstan-phpunit": "0.12.16",
        "phpstan/phpstan-webmozart-assert": "0.12.7",
        "phpunit/phpunit": "^9.4",
        "sylius-labs/coding-standard": "^3.0",
        "sylius/grid-bundle": "^1.2",
        "symfony/dependency-injection": "^4.4 || ^5.1",
        "twig/twig": "^2.12 || ^3.0",
        "vimeo/psalm": "3.17.1",
        "willdurand/hateoas-bundle": "^2.0",
        "winzou/state-machine-bundle": "^0.3.2 || ^0.4.3 || ^0.5",
        "symfony/dotenv": "^4.4 || ^5.1"
    },
    "suggest": {
        "doctrine/orm": "^2.5",
        "friendsofsymfony/rest-bundle": "^3.0",
        "jms/serializer-bundle": "^3.5",
        "sylius/locale": "^1.0",
        "willdurand/hateoas-bundle": "^2.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.7-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Sylius\\Bundle\\ResourceBundle\\": "src/Bundle/",
            "Sylius\\Component\\Resource\\": "src/Component/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sylius\\Bundle\\ResourceBundle\\spec\\": "src/Bundle/spec/",
            "Sylius\\Component\\Resource\\spec\\": "src/Component/spec/",
            "App\\": "src/Bundle/test/src/"
        }
    },
    "scripts": {
        "analyse": [
            "@php vendor/bin/ecs check src",
            "@php vendor/bin/phpstan analyse --ansi -c phpstan.neon -l max src",
            "@php vendor/bin/psalm"
        ],
        "fix": [
            "@php vendor/bin/ecs check src --fix"
        ]
    }
}
