<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults />

        <service id="Sylius\Component\Resource\State\CallableProvider">
            <argument type="tagged_locator" tag="sylius.state_provider"/>
        </service>
        <service id="Sylius\Component\Resource\State\ProviderInterface" alias="Sylius\Component\Resource\State\CallableProvider" />

        <service id="Sylius\Component\Resource\State\CallableProcessor">
            <argument type="tagged_locator" tag="sylius.state_processor"/>
        </service>
        <service id="Sylius\Component\Resource\State\ProcessorInterface" alias="Sylius\Component\Resource\State\CallableProcessor" />

        <service id="Sylius\Component\Resource\State\CallableResponder">
            <argument type="tagged_locator" tag="sylius.state_responder"/>
        </service>
        <service id="Sylius\Component\Resource\State\ResponderInterface" alias="Sylius\Component\Resource\State\CallableResponder" />

        <service id="Sylius\Component\Resource\Doctrine\Common\State\RemoveProcessor">
            <argument type="service" id="doctrine" />
            <tag name="sylius.state_processor" priority="-100" />
        </service>

        <service id="Sylius\Component\Resource\Doctrine\Common\State\PersistProcessor">
            <argument type="service" id="doctrine" />
            <tag name="sylius.state_processor" priority="-100" />
        </service>

        <service id="Sylius\Component\Resource\Symfony\State\ApplyStateMachineProcessor">
            <argument type="service" id="sylius.resource_controller.state_machine" />
            <argument type="service" id="Sylius\Component\Resource\Doctrine\Common\State\PersistProcessor" on-invalid="null" />
            <tag name="sylius.state_processor" priority="-100" />
        </service>

        <service id="Sylius\Component\Resource\Symfony\HttpFoundation\State\Responder">
            <argument type="service" id="sylius.resource_controller.redirect_handler" />
            <argument type="service" id="twig" on-invalid="null" />
            <tag name="sylius.state_responder" priority="-100" />
        </service>

        <service id="Sylius\Component\Resource\Doctrine\ORM\State\CollectionProvider">
            <argument type="service" id="sylius.resource_controller.resources_collection_provider" />
            <argument type="service" id="Sylius\Component\Resource\Repository\RepositoryLocator" />
            <tag name="sylius.state_provider" />
        </service>

        <service id="Sylius\Component\Resource\Doctrine\ORM\State\ItemProvider">
            <argument type="service" id="sylius.resource_controller.single_resource_provider" />
            <argument type="service" id="Sylius\Component\Resource\Repository\RepositoryLocator" />
            <tag name="sylius.state_provider" />
        </service>
    </services>
</container>
