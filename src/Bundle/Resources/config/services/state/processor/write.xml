<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sylius.state_processor.locator" class="Sylius\Resource\State\Processor">
            <argument type="tagged_locator" tag="sylius.state_processor" />
        </service>

        <!-- Pre-write -->
        <service id="sylius.state_processor.dispatch_pre_write_event" class="Sylius\Component\Resource\src\Symfony\EventDispatcher\State\DispatchPreWriteEventProcessor" decorates="sylius.state_processor.locator" decoration-priority="200">
            <argument type="service" id=".inner" />
            <argument type="service" id="sylius.dispatcher.operation" />
            <argument type="service" id="sylius.event_handler.operation" />
        </service>

        <!-- Post-write-->
        <service id="sylius.state_processor.post_event_dispatcher" class="Sylius\Resource\State\Processor\PostEventDispatcherProcessor" decorates="sylius.state_processor.locator" decoration-priority="200">
            <argument type="service" id=".inner" />
            <argument type="service" id="sylius.dispatcher.operation" />
            <argument type="service" id="sylius.event_handler.operation" />
        </service>

        <service id="sylius.state.processor.bulk_aware" class="Sylius\Resource\State\Processor\BulkAwareProcessor" decorates="sylius.state_processor.locator" decoration-priority="100">
            <argument type="service" id=".inner" />
        </service>
    </services>
</container>
