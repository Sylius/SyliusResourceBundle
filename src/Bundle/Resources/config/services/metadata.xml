<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults />

        <service id="sylius.metadata_factory.resource" class="Sylius\Component\Resource\Metadata\Factory\AttributesResourceMetadataFactory">
            <argument type="service" id="sylius.metadata_factory.operation" />
        </service>
        <service id="Sylius\Component\Resource\Metadata\Factory\ResourceMetadataFactoryInterface" alias="sylius.metadata_factory.resource" />

        <service id="sylius.metadata_factory.operation" class="Sylius\Component\Resource\Metadata\Factory\OperationFactory" />
        <service id="Sylius\Component\Resource\Metadata\Factory\OperationFactoryInterface" alias="sylius.metadata_factory.operation" />

        <service id="sylius.metadata_factory.doctrine_orm_resource" class="Sylius\Component\Resource\Doctrine\ORM\Metadata\Factory\DoctrineOrmResourceMetadataFactory" decorates="sylius.metadata_factory.resource">
            <argument type="service" id="sylius.resource_registry" />
            <argument type="service" id="sylius.metadata_factory.doctrine_orm_resource.inner" />
        </service>
    </services>
</container>
